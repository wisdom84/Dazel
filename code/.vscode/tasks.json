{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build engine",
            "windows": {
                "command": "${workspaceFolder}/Dazel-game-engine/engine/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/Dazel-game-engine/engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/Dazel-game-engine/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by debugger"
        },
        {
            "type": "shell",
            "label": "build Testbed",
            "windows": {
                "command": "${workspaceFolder}/Dazel-game-engine/testbed/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/Dazel-game-engine/testbed/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/Dazel-game-engine/testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build everything",
            "windows": {
                "command": "${workspaceFolder}/Dazel-game-engine/build-all.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/Dazel-game-engine/build-all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/Dazel-game-engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefualt": true
            }
        }
        // {
        //     "type":"shell",
